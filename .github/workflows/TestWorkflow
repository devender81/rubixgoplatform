name: Test_workflow

on: [push]

jobs:

 build_windows:

    runs-on: windows-latest
    steps:
      - uses: actions/checkout@v3

      - name: Set up Go
        uses: actions/setup-go@v3
        with:
          go-version: 1.17
          
      - name: Install dependencies
        run: go get .

      - name: Build
        run: go build -o windows/rubixgoplatform.exe
        
      - uses: actions/upload-artifact@v3
        with:
         name: windows-artifact
         path: windows/
